<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/p2WelcomeImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/welcome_img"
        app:layout_constraintBottom_toTopOf="@+id/p2NameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/p2WelcomeImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/p2WelcomeImg" />

    <TextView
        android:id="@+id/p2NameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Name: "
        app:layout_constraintBottom_toTopOf="@+id/p2RollNoText"
        app:layout_constraintEnd_toEndOf="@+id/p2WelcomeImg"
        app:layout_constraintStart_toStartOf="@+id/p2WelcomeImg"
        app:layout_constraintTop_toBottomOf="@+id/p2WelcomeImg" />

    <TextView
        android:id="@+id/p2RollNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="259dp"
        android:text="Roll No: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/p2NameText"
        app:layout_constraintTop_toBottomOf="@+id/p2NameText" />

</androidx.constraintlayout.widget.ConstraintLayout>